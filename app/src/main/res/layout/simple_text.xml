<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:background="#171F2F"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_close_white_24dp" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/icn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/pic"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@+id/icn"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/welcome_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center"
            android:text="Welcome Back Sam"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name_msg"
            android:text="Welcome back, I'm so very pleased to get to spend time with you again. Welcome home! I'm so happy you got to spread your wings and explore the world but I'm ever so delighted to have you home again so I can hug you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_back"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>